{
    "log": {
        "level": "warn",
        "timestamp": true
    },
    "dns": {
        "servers": [
            {
                "tag": "cloudflare",
                "address": "https://1.1.1.1/dns-query",
                "address_resolver": "local",
                "address_strategy": "prefer_ipv4",
                "detour": "direct"
            },
            {
                "tag": "alidns",
                "address": "https://223.5.5.5/dns-query",
                "address_resolver": "local",
                "address_strategy": "prefer_ipv4",
                "detour": "direct"
            },
            {
                "tag": "block",
                "address": "rcode://server_failure"
            }
        ],
        "rules": [
            {
                "geosite": [
                    "category-ads-all"
                ],
                "server": "block",
                "disable_cache": true
            },
            {
                "geosite": [
                    "geolocation-!cn"
                ],
                "server": "cloudflare"
            },
            {
                "geosite": [
                    "cn",
                    "geolocation-cn"
                ],
                "server": "alidns"
            }
        ]
    },
    "inbounds": [
        {
            "tag": "proxy-in",
            "type": "tproxy",
            "listen": "127.0.0.1",
            "listen_port": 65535,
            "sniff": true
        }
    ],
    "outbounds": [
        {
            "tag": "direct",
            "type": "direct"
        },
        {
            "tag": "proxy",
            "type": "direct"
        },
        {
            "tag": "block",
            "type": "block"
        },
        {
            "tag": "dns-out",
            "type": "dns"
        }
    ],
    "route": {
        "geosite": {
            "path": "/data/adb/sing-box/run/geosite.db"
        },
        "geoip": {
            "path": "/data/adb/sing-box/run/geoip.db"
        },
        "rules": [
            {
                "protocol": "dns",
                "outbound": "dns-out"
            },
            {
                "geosite": [
                    "category-ads-all"
                ],
                "outbound": "block"
            },
            {
                "geosite": [
                    "geolocation-!cn"
                ],
                "outbound": "proxy"
            },
            {
                "geoip": [
                    "cn",
                    "private"
                ],
                "outbound": "direct"
            },
            {
                "outbound": "proxy"
            }
        ],
        "auto_detect_interface": true
    },
    "experimental": {}
}